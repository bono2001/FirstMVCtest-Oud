@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5" style="background-color: #ffffff; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); text-align: center;">
    <h1 class="display-4" style="font-weight: bold; color: #007bff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); animation: fadeIn 1.5s ease-in-out;">CollectionBox</h1>
    <p style="font-size: 1.25rem; color: #6c757d; animation: fadeIn 2s ease-in-out;">
        Welcome to <span style="font-weight: bold; color: #007bff;">CollectionBox</span>,
        the perfect app to keep track of all your collections.
    </p>

    <a href="#" class="btn btn-primary btn-lg mt-3" style="animation: bounceIn 2.5s ease-in-out;">My Items</a>
</div>

<!-- Custom CSS for animations and shadow -->
<style>
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 40px;
        background-color: white;
    }

    @@keyframes fadeIn {
        0% { opacity: 0; }
        100% { opacity: 1; }
    }

    @@keyframes bounceIn {
        0% {
            transform: scale(0.9);
            opacity: 0;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.9;
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>
